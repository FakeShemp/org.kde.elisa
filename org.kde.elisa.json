{
  "id": "org.kde.elisa",
  "runtime": "org.kde.Platform",
  "runtime-version": "5.11",
  "sdk": "org.kde.Sdk",
  "command": "elisa",
  "rename-icon": "elisa",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--filesystem=host:ro",
    "--socket=pulseaudio",
    "--device=dri",
    "--talk-name=org.kde.baloo",
    "--own-name=org.mpris.MediaPlayer2.elisa",
    "--env=BALOO_DB_PATH=.local/share/baloo"
  ],
  "modules": [
    {
      "config-opts": [
        "-DBUILD_SHARED_LIBS=ON",
        "-DCMAKE_INSTALL_LIBDIR=lib"
      ],
      "name": "taglib",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "archive",
          "url": "http://taglib.github.io/releases/taglib-1.11.1.tar.gz",
          "sha256": "b6d1a5a610aae6ff39d93de5efd0fdc787aa9e9dc1e7026fa4c961b26563526b"
        }
      ]
    },
    {
      "config-opts": [
        "-DENABLE_TESTING=OFF",
        "-DCMAKE_INSTALL_LIBDIR=lib"
      ],
      "name": "kfilemetadata",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.kde.org/stable/frameworks/5.52/kfilemetadata-5.52.0.tar.xz",
          "sha256": "bcaa271e4234016b7f12a64c9cd8f3e9827ff1eb49f9cf2aaecea1a8535d51fe"
        }
      ]
    },
    {
      "name": "lmdb",
      "sources": [
        {
          "type": "git",
          "url": "git://github.com/LMDB/lmdb.git",
          "branch": "LMDB_0.9.18",
          "commit": "ad8488cfac644d7a289e428ab3c403c859d844cb"
        }
      ],
      "no-autogen": true,
      "make-install-args": [
        "prefix=/app"
      ],
      "subdir": "libraries/liblmdb"
    },
    {
      "config-opts": [
        "-DENABLE_TESTING=OFF",
        "-DCMAKE_INSTALL_LIBDIR=lib",
        "-DLMDB_DIR=/app"
      ],
      "name": "baloo",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.kde.org/stable/frameworks/5.52/baloo-5.52.0.tar.xz",
          "sha256": "8ddf85c6ae74dac868f37b562b80fdad753888f0c75b97ab26f01bdfc7bf5ea8"
        }
      ]
    },
    {
      "name": "elisa",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://download.kde.org/stable/elisa/0.3.0/elisa-0.3.0.tar.xz",
          "sha256": "e7983d71c3ee30bb941a72402165976e45c7a8ecdb2f4051b6d71c21035bc005"
        },
        {
          "type": "patch",
          "path": "0001-force-Breeze-icon-theme.patch"
        },
        {
          "type": "patch",
          "path": "0002-add-0.3.0-stable-version-to-appdata-file.patch"
        }
      ]
    }
  ]
}
